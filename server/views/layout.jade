doctype html
html(lang='en')
  head
    title= rawTitle || (title && (title + ' - WebTorrent')) || 'WebTorrent'
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='/style.css', charset='utf-8')
    link(rel='stylesheet' href='http://fonts.googleapis.com/css?family=Asap:400,700')
    link(rel='stylesheet' href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:400,700,400italic,700italic')
    link(rel='stylesheet' href='http://fonts.googleapis.com/css?family=Source+Code+Pro:400,700')

    script.
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
